@model WebApplication.ViewModels.UsefulMongoDb.IndexViewModel
 
@{
    ViewData["Title"] = "Список товаров";
}
 
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="UsefulMongoDb" asp-action="Create">Добавить</a>
</p>
<table class="table">
    <tr>
        <th>Модель</th>
        <th>Производитель</th>
        <th>Цена</th>
        <th></th>
    </tr>
 
    @foreach (var item in Model.Products)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Company</td>
            <td>
                @item.Price.ToString("c")
            </td>
            <td>
                <a asp-controller="UsefulMongoDb" asp-action="Delete" asp-route-id="@item.Id">Удалить</a> |
            </td>
        </tr>
    }
</table>